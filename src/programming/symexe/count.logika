import org.sireum.logika._

l"""{
  fact
    def countTill(zs: ZS, x: Z, j: Z): Z
    c0.  ∀zs: ZS  ∀x: Z
           countTill(zs, x, 0) == 0
    cEq. ∀zs: ZS  ∀x: Z  ∀j: Z
           j ≥ 1 ∧ zs(j - 1) ≠ x →
             countTill(zs, x, j) == countTill(zs, x, j - 1)
    cNe. ∀zs: ZS  ∀x: Z  ∀j: Z
           j ≥ 1 ∧ zs(j - 1) == x →
             countTill(zs, x, j) == countTill(zs, x, j - 1) + 1
}"""

def countN(a: ZS, n: Z): Z = {
  l"""{ ensures result == countTill(a, n, a.size)  }"""
  var r: Z = 0
  var i: Z = 0
  while (i < a.size) {
    l"""{ invariant 0 ≤ i
                    i ≤ a.size
                    r == countTill(a, n, i)
          modifies i, r                            }"""
    if (a(i) == n) {
      r = r + 1
    }
    i = i + 1
  }
  return r
}

val a: ZS = ZS(1, 1, 3)
val r: Z = countN(a, 1)
assert(r == 2)